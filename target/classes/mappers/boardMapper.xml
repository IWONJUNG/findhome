<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.itwillbs.mapper.BoardMapper">

  <select id="getMaxNum" resultType="java.lang.Integer">
		select max(num) from board
  </select>

  <insert id="insertBoard">
  	insert into board(num,name,pass,subject,content,readcount,date,file) values(#{num},#{name},#{pass},#{subject},#{content},#{readcount},#{date},#{file})
  </insert>
  
  <select id="getBoardList" resultType="com.itwillbs.domain.BoardBean">
  	select * from board order by num desc limit #{startRow},#{pageSize}
  </select>
  
  <select id="getBoardCount" resultType="java.lang.Integer">
		select count(*) from board
  </select>
  
  <select id="getBoard" resultType="com.itwillbs.domain.BoardBean">
  		select * from board where num=#{num}
  </select>
  
  <select id="numCheck" resultType="com.itwillbs.domain.BoardBean">
  		select * from board where num=#{num} and pass=#{pass}
  </select>
  
  <update id="updateBoard">
  		update board set name=#{name}, subject=#{subject}, content=#{content} where num=#{num}
  </update>
  
  <delete id="deleteBoard">
  		delete from board where num=#{num}
  </delete>
  
  
    <select id="getRoom" resultType="com.itwillbs.domain.OneRoomBean">
  		select * from one_room where room_id=#{room_id}
  </select>
  
</mapper>






